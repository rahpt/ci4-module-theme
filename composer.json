{
    "name": "rahpt/ci4-module-theme",
    "description": "Theme and layout management system for CodeIgniter 4 modules",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "codeigniter",
        "codeigniter4",
        "modules",
        "theme",
        "layout",
        "template"
    ],
    "homepage": "https://github.com/rahpt/ci4-module-theme",
    "support": {
        "issues": "https://github.com/rahpt/ci4-module-theme/issues",
        "source": "https://github.com/rahpt/ci4-module-theme",
        "docs": "https://github.com/rahpt/ci4-module-theme#readme"
    },
    "authors": [
        {
            "name": "Rahpt",
            "email": "ci4-module@rah.pt",
            "homepage": "https://github.com/rahpt",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.5",
        "rahpt/ci4-module": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "codeigniter4/devkit": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Rahpt\\Ci4ModuleTheme\\": "src/"
        },
        "files": [
            "src/Helpers/theme_helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rahpt\\Ci4ModuleTheme\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html build/coverage"
    },
    "extra": {
        "codeigniter4": {
            "discover": [
                "Rahpt\\Ci4ModuleTheme\\Config\\Registrar"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}